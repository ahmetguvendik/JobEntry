@model JobEntry.DTO.CategoryDTOs.UpdateCategoryDto

@{
Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Kategori Guncelleme Sayfasi</h4>
        <p class="card-subtitle mb-4">Sistemde Guncellemek Istediginiz Kategori Giriniz </p>

        <form asp-action="UpdateCategory"  asp-controller="AdminCategory" method="post">

            <div class="form-group">
                <label>Başlık Giriniz</label>
                <input type="text" asp-for="Name" placeholder="Başlık Giriniz" class="form-control">
            </div>
            <div class="form-group">
                <label>Açıklama Giriniz</label>
                <input type="text" asp-for="IconURL" placeholder="Açıklama Giriniz" class="form-control">
            </div>
            
            <button type="submit" class="btn btn-success">
                Güncelle
            </button>
            

        </form>
    </div>
    <!-- end card-body-->
</div>