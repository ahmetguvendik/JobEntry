@model JobEntry.DTO.JobDTOs.CreateJobDto

@{
    ViewData["Title"] = "Job";
    Layout = "~/Views/CompanyLayout/Index.cshtml";

}


<div class="card">
    <div class="card-body">
        <h4 class="card-title">Yeni Sirket Ekleme Sayfasi</h4>
        <p class="card-subtitle mb-4">Sisteme Eklemek Istediginiz Yeni Sirketi Giriniz </p>

        <form asp-action="Index"  asp-controller="CompanyCreateJob" method="post">
            <div class="form-group">
                <label for="simpleinput">Kategori</label>
                @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>) ViewBag.Categories, new {@class="form=control"})
            </div>
            <div class="form-group">
                <label for="simpleinput">Konum</label>
                @Html.DropDownListFor(x => x.LocationId, (List<SelectListItem>) ViewBag.Locations, new {@class="form=control"})
            </div>
            <div class="form-group">
                <label for="simpleinput">Is Turu</label>
                @Html.DropDownListFor(x => x.JobStyleId, (List<SelectListItem>) ViewBag.JobStyles, new {@class="form=control"})
            </div>
            <div class="form-group">
                <label for="simpleinput">Is Tipi</label>
                @Html.DropDownListFor(x => x.JobTypeId, (List<SelectListItem>) ViewBag.JobTypes, new {@class="form=control"})
            </div>
            <div class="form-group">
                <label for="simpleinput">Sirket</label>
                @Html.DropDownListFor(x => x.CompanyId, (List<SelectListItem>) ViewBag.Company, new {@class="form=control"})
            </div>
            
            <div class="form-group">
                <label>Isim Giriniz</label>
                <input type="text" asp-for="Name" placeholder="Isim Giriniz" class="form-control">
            </div>
            
            <div class="form-group">
                <label>Maas Girriniz</label>
                <input type="text" asp-for="Salary" placeholder="Maas Giriniz" class="form-control">
            </div>
            
            <div class="form-group">
                <label>Aciklama Giriniz</label>
                <input type="text" asp-for="Description" placeholder="Aciklama Giriniz" class="form-control">
            </div>
            
            <div class="form-group">
                <label>Son Gun Tarihi Giriniz</label>
                <input type="date" asp-for="EndTime" placeholder="Son Gun Tarihi Giriniz" class="form-control">
            </div>
            <button type="submit" class="btn btn-success">
                Ekle
            </button>
            
        </form>
    </div>

</div>