@model List<JobEntry.DTO.BannerDTOs.ResultBannerDto>

@{
    ViewData["Title"] = "Job";
    Layout = "~/Views/AdminLayout/Index.cshtml";

}


   <div class="row">
                            <div class="col-xl-12">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="card-title">Banner</h4>
                                        <p class="card-subtitle mb-4"> Sistemdeki Banner Verileri
                                        </p>
                                        <div class="table-responsive">
                                            <table class="table mb-0">
                                                <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Baslik</th>
                                                    <th>Aciklama</th>
                                                    <th>Image URL</th>
                                                    <th>Sil</th>
                                                    <th>Guncelle</th>
                                                </tr>
                                                </thead>
                                                @foreach (var item in Model)
                                                {
                                                    <tbody>
                                                    <tr>
                                                        <th scope="row">1</th>
                                                        <td>@item.Title</td>
                                                        <td>@item.Description</td>
                                                        <td>@item.ImageUrl</td>
                                                        <td><a href="\AdminBanner\RemoveBanner\@item.Id">Sil</a></td>
                                                        <td><a href="\AdminBanner\UpdateBanner\@item.Id">Guncelle</a></td>
                                                    </tr>
                                                
                                                    </tbody>
                                                }
                                            </table>
                                            @if (Model.Count < 3)
                                            {
                                                <a href="/AdminBanner/CreateBanner">Yeni Banner Ekleme</a>     
                                            }
                                        </div>
    
                                    </div>
                                    <!-- end card-body-->
                                </div>
                                <!-- end card -->
    
                            </div>
                            <!-- end col -->
    
    
                       
                            <!-- end col -->
                        </div>