@model JobEntry.DTO.CommentDTOs.CreateCommentDto

<div class="col-md-6">
    <div class="wow fadeInUp" data-wow-delay="0.5s">
        <form asp-action="CreateComment" asp-controller="Contact" method="post">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" placeholder="Adınız ve Soyadınız" asp-for="NameSurname">
                        <label asp-for="NameSurname">Adınız ve Soyadınız</label>
                        <span asp-validation-for="NameSurname" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="email" class="form-control" placeholder="Email Adresiniz" asp-for="Email">
                        <label asp-for="Email">Email Adresiniz</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-12">
                    <div class="form-floating">
                        <input type="text" class="form-control" placeholder="Konu" asp-for="Subject">
                        <label asp-for="Subject">Konu</label>
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-12">
                    <div class="form-floating">
                        <textarea class="form-control" placeholder="Mesajınız" style="height: 150px" asp-for="Message"></textarea>
                        <label asp-for="Message">Mesajınız</label>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-12">
                    <button class="btn btn-primary w-100 py-3" type="submit">Gönder</button>
                </div>
            </div>
        </form>
    </div>
</div>
