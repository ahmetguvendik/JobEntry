@model JobEntry.DTO.TestimonialDTOs.CreateTestimonialDto

@{
    ViewData["Title"] = "Job";
    Layout = "~/Views/AdminLayout/Index.cshtml";

}


<div class="card">
    <div class="card-body">
        <h4 class="card-title">Yeni Sirket Ekleme Sayfasi</h4>
        <p class="card-subtitle mb-4">Sisteme Eklemek Istediginiz Yeni Sirketi Giriniz </p>

        <form asp-action="CreateTestimonial"  asp-controller="AdminTestimonial" method="post">

            <div class="form-group">
                <label>Isim Giriniz</label>
                <input type="text" asp-for="Name" placeholder="Isim Giriniz" class="form-control">
            </div>
            
            <div class="form-group">
                <label>Aciklama Giriniz</label>
                <input type="text" asp-for="Descrption" placeholder="Aciklama Giriniz" class="form-control">
            </div>
            
            <div class="form-group">
                <label>Logo URL Giriniz</label>
                <input type="text" asp-for="Title" placeholder="Unvan Giriniz" class="form-control">
            </div>
            
            <div class="form-group">
                <label>Image URL Giriniz</label>
                <input type="text" asp-for="ImageUrl" placeholder="ImageUrl Giriniz" class="form-control">
            </div>
            <button type="submit" class="btn btn-success">
                Ekle
            </button>
            
        </form>
    </div>

</div>